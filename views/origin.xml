<odoo>
  <data>
        <!-- jecuisine.origin form view -->
        <record id="jecuisine_origin_view_form" model="ir.ui.view">
            <field name="name">jecuisine.origin.view.form</field>
            <field name="model">jecuisine.origin</field>
            <field name="arch" type="xml">
                <form string="Origines">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/> 
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- jecuisine.origin tree view -->
        <record id="jecuisine_origin_view_tree" model="ir.ui.view">
            <field name="name">jecuisine.origin.view.tree</field>
            <field name="model">jecuisine.origin</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>                    
                    <field name="description"/>                    
                </tree>
            </field>
        </record>

        <!-- jecuisine.origin action window -->
        <record id="jecuisine_origin_action" model="ir.actions.act_window">
            <field name="name">Origines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">jecuisine.origin</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
                        Aucune origine. Ajouter une origine. 
                    </p>
                    <p>
                    Liste des origines des diff√©rentes recettes.
                    </p>
            </field>
        </record>

        <!-- jecuisine.origin search view -->
        <record id="jecuisine_origin_view_search" model="ir.ui.view">
            <field name="name">jecuisine.origin.view.search</field>
            <field name="model">jecuisine.origin</field>
            <field name="arch" type="xml">
                <search string="Search origine">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="description"/>           
                </search>
            </field>
        </record>

      </data>
</odoo>